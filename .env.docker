# Configuración para entorno local con Docker
NODE_ENV=development
PORT=3000

# PostgreSQL (Docker)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=nkripta
DB_USER=postgres
DB_PASSWORD=postgres

# AWS Cognito (cognito-local)
COGNITO_USER_POOL_ID=us-east-1_cognito_local
COGNITO_CLIENT_ID=cognito_local
COGNITO_REGION=us-east-1
# Para usar cognito-local en desarrollo
COGNITO_ENDPOINT=http://cognito-local:9229

# Stripe Mock
STRIPE_SECRET_KEY=sk_test_123456789
STRIPE_WEBHOOK_SECRET=whsec_123456789
# Para el mock de Stripe, cualquier valor es válido

# JWT
JWT_SECRET=jwt_local_secret_key_for_development
JWT_EXPIRES_IN=1d

# Stripe Mock
STRIPE_MOCK_ENABLED=true
USE_STRIPE_MOCK=true
STRIPE_MOCK_HOST=stripe-mock
STRIPE_MOCK_PORT=12111

# AWS Endpoint para LocalStack
AWS_ENDPOINT=http://localstack:4566