{
  "name": "backend-integration",
  "version": "1.0.0",
  "description": "Backend para integraci√≥n de PostgreSQL, Cognito y Stripe",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:sequential": "node tests/run-tests.js",
    "test:auth": "jest tests/auth.test.js",
    "test:organizations": "jest tests/organizations.test.js",
    "test:profiles": "jest tests/profiles.test.js",
    "test:subscriptions": "jest tests/subscriptions.test.js",
    "test:integration": "jest tests/integration.test.js",
    "setup:test": "node scripts/setup-test-environment.js",
    "test:with-setup": "npm run setup:test && npm test",
    "test:skip-external": "node scripts/create-test-env.js && npm test",
    "test:with-stripe-mock": "STRIPE_MOCK_ENABLED=true TEST_MODE=full jest",
    "test:ci": "STRIPE_MOCK_ENABLED=true TEST_MODE=full jest --ci --reporters=jest-junit",
    "test:html-report": "STRIPE_MOCK_ENABLED=true TEST_MODE=full jest --reporters=jest-html-reporter",
    "test:all-reports": "mkdir -p test-reports && STRIPE_MOCK_ENABLED=true TEST_MODE=full jest --ci",
    "test:sequential-with-reports": "GENERATE_REPORTS=true node tests/run-tests.js --reports",
    "test:docs": "node scripts/generate-test-docs.js",
    "test:full-ci": "npm run test:all-reports && npm run test:docs"
  },
  "dependencies": {
    "aws-sdk": "^2.1358.0",
    "bcryptjs": "^2.4.3",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^6.1.5",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.10.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.31.0",
    "stripe": "^12.1.1",
    "uuid": "^9.0.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "axios": "^1.9.0",
    "jest": "^29.5.0",
    "jest-html-reporter": "^4.1.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3"
  }
}
